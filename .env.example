# Configurações de API para o Trading Bot

# Binance API (para dados de criptomoedas)
# Obtenha suas chaves em: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=sua_binance_api_key_aqui
BINANCE_SECRET_KEY=sua_binance_secret_key_aqui

# Alpha Vantage API (para dados de forex)
# Obtenha sua chave gratuita em: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=sua_alpha_vantage_api_key_aqui

# Configurações do Bot
RISK_PER_TRADE=2.0          # Risco por trade em % (recomendado: 1-3%)
MAX_POSITIONS=5              # Máximo de posições simultâneas
MIN_CONFIDENCE=70            # Confiança mínima para sinais (%)
MAX_DAILY_LOSS=10           # Perda máxima diária em %

# Notificações (opcional)
TELEGRAM_TOKEN=seu_telegram_bot_token_aqui
TELEGRAM_CHAT_ID=seu_telegram_chat_id_aqui
WEBHOOK_URL=sua_webhook_url_aqui

# Configurações avançadas
DEBUG_MODE=false
LOG_LEVEL=INFO
DATABASE_BACKUP_HOURS=6